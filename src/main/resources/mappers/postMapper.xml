<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.memo.post.dao.PostMapper">

	<select id="selectPostList" resultType="map">
		SELECT
			`id`
			,`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		FROM
			`post`
	</select>
	
	<insert id="insertPost" parameterType="map">
		INSERT INTO `post`
		(
			`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{userId}
			, #{subject}
			, #{content}
			, #{imagePath}
			, NOW()
			, NOW()
		)
	</insert>
	
	<select id="selectPostByUserId" parameterType="map" resultType="com.memo.post.model.Post">
		SELECT
			`id`
			,`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		FROM
			`post`
		WHERE
			`userId` = #{userId}
		<if test="direction == null">
		ORDER BY `id` DESC 
		</if>
		<if test="direction == 'next'">
		<![CDATA[
			AND `id` < #{standardId}
		]]>
		ORDER BY `id` DESC 
		</if>
		<if test="direction == 'prev'">
		<![CDATA[
			AND `id` > #{standardId}
		]]>
		</if>
		LIMIT ${limit}
	</select>
	
	<select id="selectPostBypostIduserId" parameterType="map" resultType="com.memo.post.model.Post">
		SELECT
			`id`
			,`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		FROM
			`post`
		WHERE
			`id` = #{postId}
			AND
			`userId` = #{userId}
	</select>
	
	<update id="updatePostByPostId" parameterType="map">
		UPDATE `post`
		SET
			`subject` = #{subject}
			, `content` = #{content}
			, `updatedAt` = NOW()
			<!-- imagePath가 있을 때에만 수정한다 -->
			<if test="imagePath != null">
			, `imagePath` = #{imagePath}
			</if>
		WHERE
			`id` = #{postId}
	</update>
	
	<delete id="deletePostByPostIdUserId" parameterType="map">
		DELETE
		FROM
			`post`
		WHERE
			`id` = #{postId}
			AND
			`userId` = #{userId}
	</delete>
	
	<select id="selectPostIdByUserIdSort" parameterType="map" resultType="int">
		SELECT
			`id`
		FROM
			`post`
		WHERE
			`userId` = #{userId}
		ORDER BY `id` ${sort}
		LIMIT 1
	</select>

</mapper>